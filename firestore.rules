rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create and update their own upload sessions.
    // Cloud Functions can update any session.
    match /upload_sessions/{sessionId} {
      allow create, update: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Admins can read all results. Users can read their own results.
    // Cloud Functions can create results.
    match /budget_results/{resultId} {
      allow create: if request.auth == null; // Allow from Cloud Functions
      allow read, delete: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow list: if request.auth != null; // Users can list their own results via query
    }

    // Backups can only be created by Cloud Functions and read by admins
    match /backups/{backupId} {
        allow create: if request.auth == null; // Allow from Cloud Functions
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users can create their own feedback. Admins can read all feedback.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
